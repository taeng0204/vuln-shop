<%- include('header') %>

    <div style="max-width: 800px; margin: 0 auto;">
        <h2 style="margin-bottom: 30px;">ORDER HISTORY</h2>

        <div class="order-list">
            <% if (orders.length===0) { %>
                <p>No orders found.</p>
                <% } %>

                    <% orders.forEach(function(order) { %>
                        <div class="order-item"
                            style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <div style="font-weight: 600; font-size: 1.1rem;">ORDER #<%= order.id %>
                                </div>
                                <div class="order-meta">
                                    <%= order.created_at %>
                                </div>
                            </div>
                            <div>
                                <!-- IDOR Link Construction -->
                                <% let linkId=order.id; if (securityLevel==='v2' ) {
                                    linkId=Buffer.from(order.id.toString()).toString('base64'); } %>
                                    <a href="/order?id=<%= linkId %>" class="btn btn-secondary">VIEW DETAILS</a>
                            </div>
                        </div>
                        <% }); %>
        </div>
    </div>

    <%- include('footer') %>