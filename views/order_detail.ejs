<%- include('header') %>

    <div style="max-width: 600px; margin: 0 auto;">
        <div style="margin-bottom: 20px;">
            <a href="/order" style="font-size: 0.8rem; color: #888;">&larr; BACK TO ORDERS</a>
        </div>

        <h2 style="margin-bottom: 10px;">ORDER #<%= order.id %>
        </h2>
        <p class="order-meta" style="margin-bottom: 40px;">PLACED ON <%= order.created_at %>
        </p>

        <div style="border: 1px solid #e0e0e0; padding: 30px;">
            <div
                style="display: flex; justify-content: space-between; margin-bottom: 20px; padding-bottom: 20px; border-bottom: 1px solid #eee;">
                <span style="font-weight: 600;">PRODUCT</span>
                <span>
                    <%= order.product_name %>
                </span>
            </div>
            <div style="display: flex; justify-content: space-between; font-size: 1.2rem; font-weight: 800;">
                <span>TOTAL</span>
                <span>$<%= order.price %>.00</span>
            </div>
        </div>

        <div style="margin-top: 30px; padding: 20px; background-color: #f9f9f9; font-size: 0.9rem;">
            <strong>SHIPPING TO:</strong><br>
            User ID: <%= order.user_id %><br>
                (This is sensitive info exposed via IDOR)
        </div>
    </div>

    <%- include('footer') %>